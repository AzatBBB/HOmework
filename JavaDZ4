Задание 1: Объект "Автомобиль"

const car =
    {
    manufacturer: "Toyota",
    model: "Camry",
    year: 2020,
    averageSpeed: 80, // км/ч
  
    displayInfo: function()
    {
        alert(`Производитель: ${this.manufacturer}\nМодель: ${this.model}\nГод выпуска: ${this.year}\nСредняя скорость: ${this.averageSpeed} км/ч`);
    },
    
    calculateTime: function(distance)
    {
        let timeWithoutBreaks = distance / this.averageSpeed;
        let breaks = Math.floor(timeWithoutBreaks / 4);
        let totalTime = timeWithoutBreaks + breaks;
        
        alert(`Расстояние: ${distance} км\nВремя в пути: ${totalTime.toFixed(2)} ч (включая ${breaks} перерыва(ов))`);
        return totalTime;
    }
};

car.displayInfo();
car.calculateTime(500);
Водитель делает перерыв на 1 час после каждых 4 часов движения.

Задание 2: Объект "Дробь"

function gcd(a, b) 
{
    a = Math.abs(a);
    b = Math.abs(b);
    while (b !== 0)
    {
        let temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

const fraction = {
    numerator: 0,
    denominator: 1,
    
    create: function(num, den) 
    {
        return
        {
            numerator: num,
            denominator: den,
            add: this.add,
            subtract: this.subtract,
            multiply: this.multiply,
            divide: this.divide,
            reduce: this.reduce,
            display: this.display
        };
    },
    
    // Сложение 
    add: function(other)
    {
        let num = this.numerator * other.denominator + other.numerator * this.denominator;
        let den = this.denominator * other.denominator;
        return fraction.create(num, den).reduce();
    },
    
    // Вычитание
    subtract: function(other) 
    {
        let num = this.numerator * other.denominator - other.numerator * this.denominator;
        let den = this.denominator * other.denominator;
        return fraction.create(num, den).reduce();
    },
    
    // Умножение
    multiply: function(other)
    {
        let num = this.numerator * other.numerator;
        let den = this.denominator * other.denominator;
        return fraction.create(num, den).reduce();
    },
    
    // Деление 
    divide: function(other)
    {
        let num = this.numerator * other.denominator;
        let den = this.denominator * other.numerator;
        return fraction.create(num, den).reduce();
    },
    
    // Сокращение
    reduce: function() 
    {
        let divisor = gcd(this.numerator, this.denominator);
        this.numerator = this.numerator / divisor;
        this.denominator = this.denominator / divisor;
        return this;
    },
    
    
    display: function() 
    {
        return `${this.numerator}/${this.denominator}`;
    }
};

let frac1 = fraction.create(1, 2);
let frac2 = fraction.create(1, 3);

alert("Дробь 1: " + frac1.display());
alert("Дробь 2: " + frac2.display());
alert("Сложение: " + frac1.add(frac2).display());
alert("Вычитание: " + fraction.create(3, 4).subtract(fraction.create(1, 2)).display());
alert("Умножение: " + fraction.create(2, 3).multiply(fraction.create(3, 4)).display());
alert("Деление: " + fraction.create(1, 2).divide(fraction.create(1, 4)).display());


Задание 3: Объект "Время"

const time = {
    hours: 0,
    minutes: 0,
    seconds: 0,
    
    
    create: function(h, m, s) {
        let newTime = Object.create(this);
        newTime.hours = h;
        newTime.minutes = m;
        newTime.seconds = s;
        return newTime;
    },
    
    
    display: function() 
    {
        let h = this.hours < 10 ? "0" + this.hours : this.hours;
        let m = this.minutes < 10 ? "0" + this.minutes : this.minutes;
        let s = this.seconds < 10 ? "0" + this.seconds : this.seconds;
        alert(`Время: ${h}:${m}:${s}`);
    },
    
    
    normalize: function() 
    {
        if (this.seconds >= 60)
        {
            this.minutes += Math.floor(this.seconds / 60);
            this.seconds = this.seconds % 60;
        }
        if (this.seconds < 0)
        {
            let minutesToSubtract = Math.ceil(Math.abs(this.seconds) / 60);
            this.minutes -= minutesToSubtract;
            this.seconds = 60 - (Math.abs(this.seconds) % 60);
            if (this.seconds === 60) {
                this.seconds = 0;
                this.minutes++;
            }
        }
        
        if (this.minutes >= 60)
        {
            this.hours += Math.floor(this.minutes / 60);
            this.minutes = this.minutes % 60;
        }
        if (this.minutes < 0)
        {
            let hoursToSubtract = Math.ceil(Math.abs(this.minutes) / 60);
            this.hours -= hoursToSubtract;
            this.minutes = 60 - (Math.abs(this.minutes) % 60);
            if (this.minutes === 60) {
                this.minutes = 0;
                this.hours++;
            }
        }
        
        if (this.hours >= 24)
        {
            this.hours = this.hours % 24;
        }
        if (this.hours < 0) 
        {
            this.hours = 24 - (Math.abs(this.hours) % 24);
        }
    },
    
  
    addSeconds: function(sec)
    {
        this.seconds += sec;
        this.normalize();
    },
    
    addMinutes: function(min)
    {
        this.minutes += min;
        this.normalize();
    },
    
    
    addHours: function(hrs)
    {
        this.hours += hrs;
        this.normalize();
    }
};


let myTime = time.create(20, 30, 45);
myTime.display(); // 20:30:45

myTime.addSeconds(30);
myTime.display(); // 20:31:15

myTime.addMinutes(35);
myTime.display(); // 21:06:15

myTime.addHours(5);
myTime.display(); // 02:06:15
